<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       ">

    <camelContext xmlns="http://camel.apache.org/schema/spring">
    <route id="AviancaFileRoute">
        <from uri="file:src/data/inbox?noop=true"/>
        <split timeout="0" streaming="true" parallelProcessing="true" id="PartirArchivo">
            <tokenize includeTokens="true" endToken="UNT" token="UNH" />                             
            <transform>
	                <simple>${body}\n${body}</simple>
	        </transform>       
            <to uri="file:src/data/outbox?fileName=${date:now:yyyyMMddHHmmssSSSSS}.data" id="ediFile"/>
            <log message="\n${body}"/>
        </split>
    </route>
</camelContext>
</beans>